<%= form_for(@note) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "error") %><%= t 'nie_mozna_zapisac' %> </h2>

      <ul>
      <% @note.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :godziny %><br />
    <%= f.text_field :godziny %>
  </div>
  <div class="field">
    <%= f.label :plan %><br />
    <%= f.text_area :plan %>
  </div>
  <div class="field">
    <%= f.label :realizacja %><br />
    <%= f.text_area :realizacja %>
  </div>
  <div class="field">
    <%= f.label :uwagi %><br />
    <%= f.text_area :uwagi %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
